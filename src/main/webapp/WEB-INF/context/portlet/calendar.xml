<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:ehcache="http://www.springmodules.org/schema/ehcache"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
    http://www.springframework.org/schema/aop
    http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

    <!-- Properties configuration -->
    <bean id="propertyConfigurer"
        class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"
        lazy-init="false">
        <property name="locations">
            <list>
                <value>classpath:datasource.properties</value>
                <value>classpath:configuration.properties</value>
            </list>
        </property>
    </bean>
    
    <bean id="sessionKeyGenerator" class="org.jasig.web.util.DefaultSessionKeyGenerator">
        <property name="seed" value="0" />
    </bean>
    
    
    <!-- Controllers -->

    <!-- main portlet view -->
    <bean id="viewCalendarController"
        class="edu.yale.its.tp.portlets.calendar.mvc.controller.CalendarController">
        <property name="calendarStore" ref="calendarStore"/>
        <property name="userToken"><value>${userinfo.userid.key}</value></property>
        <property name="initializationServices">
            <list>
            	<!--
					Uncomment the following section if you are using CAS authenticated calendar adapters.
				-->
                <!--
                <bean class="edu.yale.its.tp.portlets.calendar.service.CasProxyInitializationService">
                    <property name="proxyTicketService" ref="casService"/>
                </bean>
                -->
                
                <!--
					Uncomment the following section if you are using cached password authenticated calendar adapters.
				-->
                <!--
                <bean class="edu.yale.its.tp.portlets.calendar.service.CachedCredentialsInitializationService"/>
                -->
                
            </list>
        </property>
    </bean>

    <!-- view and edit calendar subscriptions -->
    <bean id="editCalendarSubscriptionsController"
        class="edu.yale.its.tp.portlets.calendar.mvc.controller.EditCalendarSubscriptionsController">
        <property name="predefinedEditActions">
            <map>
                <!-- Add edit screens for custom calendar adapters -->
                <!--
                <entry key="edu.yale.its.tp.portlets.calendar.adapter.SomeOtherCalendarAdapter" value="editSomeOtherCalendar"/>
                -->
            </map>
        </property>
        <property name="calendarStore" ref="calendarStore"/>
    </bean>

    <!-- edit calendar preferences -->
    <bean id="editCalendarPreferencesController"
        class="edu.yale.its.tp.portlets.calendar.mvc.controller.EditCalendarPreferencesController">
        <property name="formView">
            <value>editCalendarPreferences</value>
        </property>
        <property name="sessionForm">
            <value>false</value>
        </property>
        <property name="commandName" value="calendarPreferencesCommand"/>
        <property name="commandClass" value="edu.yale.its.tp.portlets.calendar.mvc.CalendarPreferencesCommand"/>
    </bean>
    
    <!-- adminstrate pre-defined calendars -->
    <bean id="adminCalendarController"
        class="edu.yale.its.tp.portlets.calendar.mvc.controller.AdminCalendarController">
        <property name="calendarStore" ref="calendarStore"/>
    </bean>
    
    <!-- add or edit a user-defined calendar -->
    <bean id="editCalendarConfigurationController"
        class="edu.yale.its.tp.portlets.calendar.mvc.controller.EditUserHttpICalController">
        <property name="formView">
            <value>editCalendarUrl</value>
        </property>
        <property name="sessionForm">
            <value>false</value>
        </property>
        <property name="commandName" value="calendarListingCommand"/>
        <property name="commandClass" value="edu.yale.its.tp.portlets.calendar.mvc.CalendarListingCommand"/>
        <property name="validator" ref="beanValidator"/>
        <property name="calendarStore" ref="calendarStore"/>
    </bean>
    
    <!-- add or edit a pre-defined calendar -->
    <bean id="editCalendarDefinitionController"
        class="edu.yale.its.tp.portlets.calendar.mvc.controller.EditCalendarDefinitionController">
        <property name="formView">
            <value>editCalendarDefinition</value>
        </property>
        <property name="sessionForm">
            <value>false</value>
        </property>
        <property name="commandName" value="calendarDefinitionForm"/>
        <property name="commandClass" value="edu.yale.its.tp.portlets.calendar.mvc.CalendarDefinitionForm"/>
        <property name="calendarStore" ref="calendarStore"/>
    </bean>
    
    <bean id="ajaxCalendarController"
        class="edu.yale.its.tp.portlets.calendar.mvc.controller.AjaxCalendarController">
        <property name="calendarStore" ref="calendarStore"/>
        <property name="modelPasser" ref="modelPasser"/>
        <property name="sessionKeyGenerator" ref="sessionKeyGenerator"/>
    </bean>
    
    <!-- Handler Mapping -->

    <bean id="portletModeParameterHandlerMapping"
        class="org.springframework.web.portlet.handler.PortletModeParameterHandlerMapping">
        <property name="order" value="1"/>
        <property name="portletModeParameterMap">
            <map>
                <entry key="view">
                    <map>
                        <entry key="list" value-ref="viewCalendarController"/>
                        <entry key="events" value-ref="ajaxCalendarController"/>
                    </map>
                </entry>
                <entry key="edit">
                    <map>
                        <entry key="editSubscriptions" value-ref="editCalendarSubscriptionsController"/>
                        <entry key="editPreferences" value-ref="editCalendarPreferencesController"/>
                        <entry key="editUrl" value-ref="editCalendarConfigurationController"/>
                        <entry key="administration" value-ref="adminCalendarController"/>
                        <entry key="editCalendarDefinition" value-ref="editCalendarDefinitionController"/>
                    </map>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="portletModeHandlerMapping"
        class="org.springframework.web.portlet.handler.PortletModeHandlerMapping">
        <property name="order" value="2"/>
        <property name="portletModeMap">
            <map>
                <entry key="view" value-ref="viewCalendarController"/>
                <entry key="edit" value-ref="editCalendarSubscriptionsController"/>
            </map>
        </property>
    </bean>

</beans>
